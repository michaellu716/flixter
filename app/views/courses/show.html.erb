<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <!--Banner-->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
       
        <% if @course.image.present? %>
          <%= image_tag @course.image.url, class: 'd-block img-fluid' %>
        <% end %>
        <div class="carousel-caption d-none d-md-block">
          <h3><%= @course.title %></h3>
       </div>
    </div>
  </div>
</div>
<!-- End of Banner-->
  <br />
  
   <div class="col-md-12 text-center">
    <% if current_user && current_user == @course.user %>
           <%= link_to 'Teacher Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
    <% end %>
  </div>
  <div class="row">
      <div class="col-md-12 text-center">
         <%= @course.description %>
      </div> 
   <div class="col-md-12 text-center"> 
  	 <span class="badge badge-default">
     PRICE: <%= number_to_currency @course.cost %>
 	  </span>
    <% if current_user %>
     <% if current_user.enrolled_in?(@course) %>
        <h3 class="badge badge-info">You Are Enrolled!</h3>
        <% else %>
           <% if @course.free? %>
                <div class="col-md-12">
                  <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary', method: :post %>
                </div>
            <br /><br />  
            <% else %>  
             <%= form_tag course_enrollments_path(@course) do %>
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-email="<%= current_user.email %>"
                      data-description="<%= @course.title %> (<%= number_to_currency @course.cost %>)"
                      data-amount="<%= (@course.cost * 100).to_i %>"
                      data-locale="auto">
              </script>
             <% end %>
            <% end %>
          <% end %>
        <% else %>
             <h3 class="badge badge-info"><%= link_to 'Sign In to Enroll!', new_user_session_path, class: 'nav-link' %></h3>
      <% end %>
     </div>
      <br />
      <br />
  </div>

   <div class="col-12">
    <% @course.sections.rank(:row_order).each do |section| %>
      <br /><br />
      <div class="section">
        <h3>
          <%= section.title %>
        </h3>
        <div class="row">
          <% section.lessons.rank(:row_order).each do |lesson| %>
          <div class="col-12 col-sm-6"> 
            <div class="lesson text-center">
               <br />
              <%= link_to lesson_path(lesson) do %>
                <b><%= lesson.title %></b>
                 <br />
                <%= lesson.subtitle %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <br class="clr" />
      </div>
    <% end %>
  </div>
</div>
</div>
<style>
  .nav-link{
    color:white;
  }
</style>