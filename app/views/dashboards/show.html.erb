<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">What I'm Learning</h1>
  <hr class="grey">
      <div class="row">
        <!-- Mainbar column -->
        <div class="col-md-12">
          <div class="col-md-12 col-sm-12">
            <div class="row">
               <% current_user.enrolled_courses.each do |course| %>
              <div class="col-md-3 col-sm-3">
                <div class="row">
                  <div class="card-veiw">
                    <h2 class="text-center"><%= link_to course.title, course_path(course) %></h2>
                    <% if course.image.present? %>
                      <%= image_tag course.image.url, class: 'img-fluid' %>
                    <% end %>
                    <p class="text-center"><%= course.description %></p>
                    <p class="text-center"><%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %></p>
                  </div>
                </div>
              </div>
             <% end %>
            </div>
          </div>
        </div>
  </div>

